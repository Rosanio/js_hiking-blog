{{#if newPostForm}}
<form class="newPost">
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id='title'}}
  </div>
  <div class="form-group">
    <label for="body">Blog Content</label>
    {{textarea rows="10" cols="170" value=body id='body'}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input value=image id='image'}}
  </div>
  <button class="btn btn-primary" {{action 'save' author}}>Blog!</button>
</form>
{{else}}
<button class="btn btn-primary"{{action 'createPost'}}>Create Post</button>
{{/if}}
