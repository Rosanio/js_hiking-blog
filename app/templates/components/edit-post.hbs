{{#if showEditForm}}
  <form class="editPost">
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id='title'}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id='author'}}
    </div>
    <div class="form-group">
      <label for="body">Blog Content</label>
      {{textarea  rows="10" cols="80" value=body id='body' value=post.body}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id='image'}}
    </div>
    <button class="btn btn-primary" {{action 'edit' post}}>Edit!</button>
  </form>
{{else}}
  <button class="btn btn-info" {{action 'editPost'}}>Edit Post</button>
{{/if}}
