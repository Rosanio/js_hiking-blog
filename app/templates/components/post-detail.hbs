<div class="postContainer">
  <h2>{{post.title}}</h2>
  <h4>{{post.author}}</h4>
  <img src={{post.image}} alt={{post.title}} />
  <p>{{post.body}}</p>
  <p class="blogDate">{{post.date}}</p>
</div>

<br>

<button class="btn btn-danger" {{action 'delete' post}}>Delete Blog</button>

{{edit-post post=post edit="edit"}}
